# /etc/samba/smb.conf

[global]

  workgroup = BRO
  server string = Samba Server
  hosts allow = 192.168.1.0/24 127.0.0.1/8

  printcap name = /etc/printcap
  load printers = no
  # printing = bsd

  log file = /var/log/samba/%m.log
  max log size = 50

  security = user
  encrypt passwords = yes
  # smb passwd file = /etc/samba/smbpasswd

  dns proxy = no

#
# Shares
#

