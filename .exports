#!/bin/bash

export PATH=$PATH:$HOME/.cabal/bin:$HOME/.cargo/bin

if [ "$(hostname)" = "sia-10" ]; then
  export PATH=/opt/ghc/7.10.3/bin:$PATH
fi

export BROWSER=$(which chromium-browser 2>/dev/null || which chromium 2>/dev/null)
export MAILER=$(which thunderbird 2>/dev/null)

export CXX=clang++
export CC=clang

export EDITOR=nano
export VISUAL=nano

# colours in less
export LESS_TERMCAP_mb=$(color bold red)
export LESS_TERMCAP_md=$(color bold blue)
export LESS_TERMCAP_me=$(color reset)
export LESS_TERMCAP_se=$(color reset)
export LESS_TERMCAP_so=$(color bold black)
export LESS_TERMCAP_ue=$(color reset)
export LESS_TERMCAP_us=$(color magenta)
